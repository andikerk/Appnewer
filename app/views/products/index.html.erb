

<h1 id="ourprod">Our Bikes</h1>

<div  id="select" class="container-fluid">
<%#= @men%><%#= @women%><%#= @children%>

	<%= form_tag("/products", method: "get",type:"num", id:"select000") do %>
	<span id="select001">
		<span><%= check_box_tag(:men,'m',@men)%></span>
		<span><%= label_tag(:men, "men") %></span>
		<span><%= check_box_tag(:women, 'w', @women) %></span>
		<span><%= label_tag(:women, "women")%></span>
		<span><%= check_box_tag(:children, 'c', @children) %></span>
		<span><%= label_tag(:children, "children")%></span>

		<span><%= submit_tag("Apply",id:"catapply") %></span>
	<%end%>
		<span><%= form_tag("/products", method: "get",type:"num", id:"select010") do %></span>
		<span><b>	 Max â‚¬ <%= number_field_tag(:maxamount,placeholder= @maxamount/100, onchange:"this.form.submit();", id: "select011") %>.</span> Show by 
