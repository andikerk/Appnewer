<p id="notice"><%= notice %></p>

<div class="row" id="showprodrow">
  <div class="col-sm-4 col-xs-12" id="prodshowdescr">

        <h3>  
          <strong><%= @product.name %></strong>
        </h3>

        <p>
          <strong><%= @product.description %></strong>
        </p>

        <p>
          <strong>Wheelsize:</strong>

          <%= @product.wheelsize %>
        </p>

        <p>
          <strong>Colour:</strong>
          <%= @product.colour %>
        </p>
        <p>
          <strong>Price:</strong>
          <%= number_to_currency(@product.price.to_d/100,unit:"â‚¬") %>
        </p>

        
                <%if !signed_in?%>
        <button class="btn btn-default btn-info" id="buy?login!">
          <%=link_to "to purchase this item please log in", new_user_session_path %>
        </button>
        <%end%>

        
        <div id="stripebtn">
          <%= form_tag "/payments/create" do %>
          <%= hidden_field_tag(:product_id, @product.id) %>
          <%= render partial: "shared/stripe_checkout_button" %>
          <% end %>
        </div>  
        


              <% if(@product.comments.any?)
              dummy = "comments" end
              if(@comments.count==1) then
              dummy = "comment"
              end%>

        <p> <%=@comments.count%> <%=dummy%>, average rating: <%= @product.average_rating.round(1) %> out of 5</p>

        <div class="rated" data-score="<%= @product.average_rating %>"></div>
        


              <% if(@comments.count>=2)%>
              
              <p> Highest rating:"<%= @product.highest_rating_comment.body%>"
              <div class="rated" data-score = "<%= @product.highest_rating_comment.rating %>"></div></p>
              <p> Lowest rating:"<%= @product.lowest_rating_comment.body%>" </p>
              <p><div class="rated" data-score = "<%= @product.lowest_rating_comment.rating %>"></div></p>
              <%end%>

              
        



  </div>

  <div class="col-sm-4 col-xs-12">
        <%= image_tag(@product.image_url, class: "img-responsive img-thumbnail",id: "showpic") %>

  </div>

  <div class="col-sm-4 col-xs-12">

  
        <%= render 'new_comment' %>
        <%= render 'comments' %>
        

  </div>
</div>
        <% if signed_in? && current_user.admin? %>
        <%= link_to 'Edit', edit_product_path(@product) %> 
        <%= link_to 'Back', products_path %>
        <%= link_to 'New Product', new_product_path %>
        <%end%>