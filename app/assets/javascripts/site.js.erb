
var refreshRating = function(){

  $('.rating').raty({
    path: '/assets/',
    scoreName: 'comment[rating]'
  });

  $('.rated').raty({
    path: '/assets/',
    readOnly: true,
    score: function() {
      return $(this).attr('data-score');
    }
  });
};




$(document).on('turbolinks:load ajaxSuccess', function() {

  $('.alert').delay(3000).fadeOut(2000);

  $('.notice').delay(3000).fadeOut(2000);

  refreshRating();
  refreshRating();
   
});



