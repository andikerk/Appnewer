    setTimeout(function(){$('.alert').fadeOut();}, 3000);

    setTimeout(function(){$('.notice').fadeOut();}, 3000);

    $('.rating').raty( { path: '/assets', scoreName: 'comment[rating]' });
    $('.rated').raty({ path: '/assets',
        readOnly: true,
        score: function() {
        return $(this).attr('data-score');
        }
      });
  }); 




